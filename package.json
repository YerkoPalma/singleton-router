{
  "name": "singleton-router",
  "version": "1.4.0",
  "description": "Tiny singleton router for the browser",
  "main": "dist/bundle.min.js",
  "repository": "YerkoPalma/singleton-router",
  "files": [
    "index.js",
    "dist/bundle.js",
    "dist/bundle.min.js"
  ],
  "scripts": {
    "pretest": "rollup index.js --format cjs --output index.es5.js",
    "test": "standard --verbose | snazzy && tape test.js | tap-summary",
    "posttest": "rm -f index.es5.js",
    "build": "mkdir -p dist && browserify -t rollupify -t babelify -e index.js -o dist/bundle.js -s RouterSingleton && uglifyjs dist/bundle.js -o dist/bundle.min.js",
    "start": "budo dist/bundle.js:app.js --verbose --pushstate -p 8080 -H '0.0.0.0' -- -t es2040 -t rollupify -s RouterSingleton"
  },
  "standard": {
    "ignore": [
      "index.es5.js"
    ]
  },
  "keywords": [
    "router",
    "client-router",
    "browser",
    "web",
    "singleton"
  ],
  "author": "Yerko Palma <yerko.palma@usach.cl>",
  "license": "MIT",
  "dependencies": {
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-classes": "^6.23.0",
    "babel-preset-es2040": "^1.1.1",
    "babelify": "^7.3.0",
    "bel": "^4.5.1",
    "browserify": "^14.1.0",
    "budo": "^10.0.3",
    "es2040": "^1.2.5",
    "global": "^4.3.1",
    "inherits": "^2.0.3",
    "parseurl": "^1.3.1",
    "rollup": "^0.41.6",
    "rollupify": "^0.3.9",
    "sinon": "^2.1.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "tap-summary": "^3.0.1",
    "tape": "^4.6.3",
    "uglify-js": "^3.0.1"
  }
}
